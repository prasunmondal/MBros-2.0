<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.UserRoleSelect">

    <Button
        android:id="@+id/user_role_select_deliver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:text="@string/user_role_deliver"
        android:onClick="onClickUserRoleSelectDeliver"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/user_role_select_manager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/user_role_manage"
        android:onClick="onClickUserRoleSelectManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/user_role_select_deliver"
        app:layout_constraintStart_toStartOf="@+id/user_role_select_deliver"
        app:layout_constraintTop_toBottomOf="@+id/user_role_select_deliver" />
</androidx.constraintlayout.widget.ConstraintLayout>